<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.product.domain.Product" table="products">
        <composite-id name="id" class="store.market.administration.product.domain.ProductId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        <component name="categorieId" class="store.market.administration.product.domain.ProductCategorieId" access="field">
            <property name="value" column="categorie_id" type="string" access="field" />
        </component>
        <component name="unitMeasureId" class="store.market.administration.product.domain.ProductUnitMeasureId" access="field">
            <property name="value" column="unit_measure_id" type="string" access="field" />
        </component>
        <component name="name" class="store.market.administration.product.domain.ProductName" access="field">
            <property name="value" column="name" type="string" access="field" />
        </component>
        <component name="price" class="store.market.administration.product.domain.ProductPrice" access="field">
            <property name="value" column="name" type="double" access="field" />
        </component>
    </class>
</hibernate-mapping>