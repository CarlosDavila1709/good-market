<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.customer.domain.Customer" table="customers">
        <composite-id name="id" class="store.market.administration.customer.domain.CustomerId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        <component name="customerPhone" class="store.market.administration.customer.domain.CustomerPhone" access="field">
            <property name="value" column="customer_phone" type="string" access="field" />
        </component>
        <component name="customerFirstName" class="store.market.administration.customer.domain.CustomerFirstName" access="field">
            <property name="value" column="customer_first_name" type="string" access="field" />
        </component>
        <component name="customerLastName" class="store.market.administration.customer.domain.CustomerLastName" access="field">
            <property name="value" column="customer_last_name" type="string" access="field" />
        </component>
        <component name="customerMiddleName" class="store.market.administration.customer.domain.CustomerMiddleName" access="field">
            <property name="value" column="customer_middle_name" type="string" access="field" />
        </component>
        <component name="customerAddress" class="store.market.administration.customer.domain.CustomerAddress" access="field">
            <property name="value" column="customer_address" type="string" access="field" />
        </component>
    </class>
</hibernate-mapping>