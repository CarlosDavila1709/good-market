<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.unit_measure.domain.UnitMeasure" table="unit_measures">
        <composite-id name="id" class="store.market.administration.unit_measure.domain.UnitMeasureId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        
        <component name="groceryId" class="store.market.administration.grocery.domain.BackofficeGroceryId" access="field">
            <property name="value" column="grocery_id" type="string" access="field" />
        </component>
        
        <component name="name" class="store.market.administration.unit_measure.domain.UnitMeasureName" access="field">
            <property name="value" column="name" type="string" access="field" />
        </component>
        
        <component name="prefix" class="store.market.administration.unit_measure.domain.UnitMeasurePrefix" access="field">
            <property name="value" column="prefix" type="string" access="field" />
        </component>
    </class>
</hibernate-mapping>