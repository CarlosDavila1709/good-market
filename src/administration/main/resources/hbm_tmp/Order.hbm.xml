<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.order.domain.Order" table="orders">
        <composite-id name="id" class="store.market.administration.order.domain.OrderId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        <component name="groceryId" class="store.market.administration.grocery.domain.BackofficeGroceryId" access="field">
            <property name="value" column="grocery_id" type="string" access="field" />
        </component>
        <component name="customerId" class="store.market.administration.customer.domain.CustomerId" access="field">
            <property name="value" column="customer_id" type="string" access="field" />
        </component>
        <component name="amountTotal" class="store.market.administration.order.domain.OrderAmountTotal" access="field">
            <property name="value" column="amount_total" type="double" access="field" />
        </component>
        <component name="totalItems" class="store.market.administration.order.domain.OrderCounterItems" access="field">
            <property name="value" column="total_items" type="integer" access="field" />
        </component>
        <component name="status" class="store.market.administration.order.domain.OrderStatus" access="field">
            <property name="value" column="status" type="string" access="field" />
        </component>
        <property name="descriptionStatus" column="description_status" type="string" access="field" />
        <property name="nameCustomer" column="name_customer" type="string" access="field" />
        <component name="dateCreation" class="store.market.administration.order.domain.OrderDateCreation" access="field">
            <property name="value" column="date_creation" type="string" access="field" />
        </component>
        <property name="existingProducts" column="existing_products" access="field">
            <type name="json_string">
                <param name="list_of">store.market.administration.product_catalog.domain.ProductCatalogId</param>
            </type>
        </property>
    </class>
</hibernate-mapping>