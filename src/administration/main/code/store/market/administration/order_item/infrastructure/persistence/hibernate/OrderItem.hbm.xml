<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.order_item.domain.Item" table="order_item">
        <composite-id name="id" class="store.market.administration.order_item.domain.ItemId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        <component name="orderId" class="store.market.administration.order.domain.OrderId" access="field">
            <property name="value" column="order_id" type="string" access="field" />
        </component>
        <component name="productId" class="store.market.administration.product_catalog.domain.ProductCatalogId" access="field">
            <property name="value" column="product_id" type="string" access="field" />
        </component>
        <component name="productName" class="store.market.administration.order_item.domain.ItemProductName" access="field">
            <property name="value" column="product_name" type="string" access="field" />
        </component>
        <component name="productPrice" class="store.market.administration.order_item.domain.ItemProductPrice" access="field">
            <property name="value" column="product_price" type="double" access="field" />
        </component>
        <component name="amountTotal" class="store.market.administration.order_item.domain.ItemAmountTotal" access="field">
            <property name="value" column="amount_total" type="double" access="field" />
        </component>
        <component name="quantity" class="store.market.administration.order_item.domain.ItemQuantity" access="field">
            <property name="value" column="quantity" type="integer" access="field" />
        </component>
        <property name="categorieName" column="categorie_name" type="string" access="field" />
        <property name="unitMeasureName" column="unitMeasure_name" type="string" access="field" />
    </class>
</hibernate-mapping>