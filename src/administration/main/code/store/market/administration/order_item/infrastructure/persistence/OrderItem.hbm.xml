<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="store.market.administration.order.domain.Order" table="order">
        <composite-id name="id" class="store.market.administration.order_item.domain.OrderItemId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>
        <component name="orderId" class="store.market.administration.order.domain.OrderId" access="field">
            <property name="value" column="order_id" type="string" access="field" />
        </component>
        <component name="productId" class="store.market.administration.product.domain.ProductId" access="field">
            <property name="value" column="product_id" type="string" access="field" />
        </component>
        <component name="productName" class="store.market.administration.order.domain.OrderProductName" access="field">
            <property name="value" column="product_name" type="double" access="field" />
        </component>
        <component name="productPrice" class="store.market.administration.order_item.domain.OrderProductPrice" access="field">
            <property name="value" column="product_price" type="double" access="field" />
        </component>
        <component name="amountTotal" class="store.market.administration.order_item.domain.OrderAmountTotal" access="field">
            <property name="value" column="amount_total" type="double" access="field" />
        </component>
        <component name="quantity" class="store.market.administration.order_item.domain.OrderQuantity" access="field">
            <property name="value" column="quantity" type="integer" access="field" />
        </component>
    </class>
</hibernate-mapping>